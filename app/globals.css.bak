@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }

  .glass-panel {
    @apply bg-black/50 backdrop-blur-md;
    box-shadow:
      0 4px 30px rgba(0, 0, 0, 0.5),
      inset 0 0 0 1px rgba(255, 215, 0, 0.1);
    border: 1px solid rgba(255, 215, 0, 0.15);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .glass-panel-gold {
    @apply bg-black/60 backdrop-blur-lg;
    box-shadow:
      0 0 30px rgba(255, 215, 0, 0.05),
      inset 0 0 20px rgba(255, 215, 0, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .glass-card-hover {
    @apply hover:bg-black/70 hover:scale-[1.01] hover:shadow-[0_0_25px_rgba(255, 215, 0, 0.15)];
  }

  .neon-text-gold {
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.5), 0 0 10px rgba(255, 215, 0, 0.3);
  }

  .gold-gradient {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 50%, #FFD700 100%);
  }

  .gold-gradient-text {
    background: linear-gradient(135deg, #FFD700, #FFA500, #FFE135);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, rgba(255, 215, 0, 0.2), rgba(255, 215, 0, 0.4));
    border-radius: 10px;
    border: 1px solid rgba(255, 215, 0, 0.1);
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, rgba(255, 215, 0, 0.3), rgba(255, 215, 0, 0.6));
  }
}

@layer base {
  * {
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 215, 0, 0.3) transparent;
  }
}

:root {
  --foreground-rgb: 255, 255, 255;
  --color-primary: #FFD700;
  --color-secondary: #FFA500;
  --color-success: #10b981;
  --color-danger: #ef4444;
  --color-warning: #eab308;
}

/* Animate-in classes for message animations */
.animate-in {
  animation-duration: 300ms;
  animation-fill-mode: both;
}

.fade-in {
  animation-name: fadeIn;
}

.slide-in-from-bottom-2 {
  animation-name: slideInFromBottom;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideInFromBottom {
  from {
    transform: translateY(8px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes goldPulse {

  0%,
  100% {
    box-shadow: 0 0 5px rgba(255, 215, 0, 0.2);
  }

  50% {
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
  }
}

.gold-pulse {
  animation: goldPulse 2s ease-in-out infinite;
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0) rotate(0deg);
  }

  33% {
    transform: translateY(-5px) rotate(0.5deg);
  }

  66% {
    transform: translateY(2px) rotate(-0.5deg);
  }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.hover-lift {
  @apply transition-transform duration-300 hover:-translate-y-1;
}

@keyframes pulse-slow {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.7;
  }
}

.animate-pulse-slow {
  animation: pulse-slow 4s ease-in-out infinite;
}

@keyframes scanline {
  0% {
    transform: translateY(-100%);
  }

  100% {
    transform: translateY(100%);
  }
}

.bg-scanlines::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: rgba(255, 215, 0, 0.2);
  animation: scanline 4s linear infinite;
  pointer-events: none;
}

@keyframes glitch {
  0% {
    transform: translate(0);
  }

  20% {
    transform: translate(-2px, 2px);
  }

  40% {
    transform: translate(-2px, -2px);
  }

  60% {
    transform: translate(2px, 2px);
  }

  80% {
    transform: translate(2px, -2px);
  }

  100% {
    transform: translate(0);
  }
}

.animate-glitch {
  animation: glitch 0.3s infinite;
}

@keyframes glitch-text {
  0% {
    text-shadow: 2px 0 0 rgba(255, 0, 0, 0.5), -2px 0 0 rgba(0, 255, 255, 0.5);
  }

  25% {
    text-shadow: -2px 0 0 rgba(255, 0, 0, 0.5), 2px 0 0 rgba(0, 255, 255, 0.5);
  }

  50% {
    text-shadow: 2px 0 0 rgba(255, 0, 0, 0.5), -2px 0 0 rgba(0, 255, 255, 0.5);
  }

  75% {
    text-shadow: -2px 0 0 rgba(255, 0, 0, 0.5), 2px 0 0 rgba(0, 255, 255, 0.5);
  }

  100% {
    text-shadow: 2px 0 0 rgba(255, 0, 0, 0.5), -2px 0 0 rgba(0, 255, 255, 0.5);
  }
}

.neon-glitch {
  animation: glitch-text 0.1s infinite;
}

/* --- Premium Quality Upgrades --- */

/* Gold Dust Particles */
@keyframes gold-dust {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 0;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    transform: translateY(-100vh) rotate(360deg);
    opacity: 0;
  }
}

.gold-dust-container {
  position: fixed;
  top: 100%;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.particle {
  position: absolute;
  background: radial-gradient(circle, #FFD700 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(1px);
  animation: gold-dust linear infinite;
  transform: translateZ(0);
}

/* Glowing Widget Border */
.glow-border {
  position: relative;
  overflow: hidden;
}

.glow-border::after {
  content: "";
  position: absolute;
  inset: -1px;
  background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.4), transparent);
  background-size: 200% 100%;
  animation: glow-move 3s linear infinite;
  z-index: -1;
  border-radius: inherit;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.glow-border:hover::after {
  opacity: 1;
}

@keyframes glow-move {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}

/* Mood Indicators */
.aura-normal {
  box-shadow: 0 0 15px rgba(255, 215, 0, 0.2);
}

.aura-happy {
  box-shadow: 0 0 25px rgba(34, 197, 94, 0.4);
}

.aura-serious {
  box-shadow: 0 0 25px rgba(234, 179, 8, 0.4);
}

.aura-alarmed {
  box-shadow: 0 0 25px rgba(239, 68, 68, 0.5);
  animation: pulse-red 1s infinite;
}

.aura-rare {
  box-shadow: 0 0 30px rgba(16, 185, 129, 0.4);
}

.aura-legendary {
  box-shadow: 0 0 40px rgba(234, 179, 8, 0.6);
  animation: gold-pulse 2s infinite;
}

@keyframes pulse-red {

  0%,
  100% {
    box-shadow: 0 0 15px rgba(239, 68, 68, 0.3);
  }

  50% {
    box-shadow: 0 0 30px rgba(239, 68, 68, 0.6);
  }
}

/* Table hover effects */
table tr:hover td {
  transition: background-color 0.15s ease;
}

@layer components {

  /* Mobile Header/Container Improvements */
  .mobile-px {
    @apply px-4 md:px-6;
  }

  .mobile-gap {
    @apply gap-4 md:gap-6;
  }

  /* Stack cards on mobile properly */
  .responsive-grid {
    @apply grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6;
  }

  /* Adjust glass panel for smaller screens */
  .glass-panel {
    @apply p-4 sm:p-6;
  }

  /* Mobile Chat specific */
  .chat-bubble {
    @apply max-w-[90%] sm:max-w-[80%] p-3 sm:p-4 text-sm sm:text-base;
  }

  /* Council result responsive grid */
  .result-grid-3 {
    @apply grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-4;
  }
}

:root {
  --background: #050505;
  --foreground: #ffffff;
  --color-primary: #3b82f6;
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: 'Inter', sans-serif;
  overflow: hidden;
}

h1,
h2,
h3,
h4,
h5 {
  letter-spacing: -0.02em;
}

/* --- Mobile Specific Tweaks --- */
@media (max-width: 640px) {
  h1 {
    font-size: 1.125rem !important;
  }

  h2 {
    font-size: 1rem !important;
  }

  .glass-panel {
    padding: 1rem !important;
  }

  .mobile-hide {
    display: none !important;
  }

  .mobile-stack {
    flex-direction: column !important;
  }
}

/* --- Phase 3: Cinematic Visualization (FUI) --- */

.hologram-glow {
  filter: drop-shadow(0 0 8px rgba(234, 179, 8, 0.4));
  animation: hologram-flicker 4s infinite;
}

@keyframes hologram-flicker {

  0%,
  100% {
    opacity: 1;
  }

  5% {
    opacity: 0.8;
  }

  10% {
    opacity: 0.9;
  }

  15% {
    opacity: 0.7;
  }

  20% {
    opacity: 1;
  }
}

.cyber-overlay {
  position: fixed;
  inset: 0;
  background: linear-gradient(rgba(18, 16, 16, 0) 50%,
      rgba(0, 0, 0, 0.1) 50%);
  background-size: 100% 4px;
  z-index: 100;
  pointer-events: none;
  opacity: 0.2;
  transform: translateZ(0);
}

.data-stream {
  position: relative;
  overflow: hidden;
}

.data-stream::after {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
      transparent,
      rgba(234, 179, 8, 0.05),
      transparent);
  animation: data-flow 3s linear infinite;
}

@keyframes data-flow {
  0% {
    left: -100%;
  }

  100% {
    left: 100%;
  }
}

/* ============================================
   Phase 2: Micro-Interactions & Deep Glass
   ============================================ */

/* --- Micro-Interaction Buttons --- */
.btn-micro {
  transition: all 0.15s cubic-bezier(0.34, 1.56, 0.64, 1);
  transform-origin: center;
}

.btn-micro:hover {
  transform: translateY(-2px) scale(1.03);
  filter: brightness(1.15);
}

.btn-micro:active {
  transform: translateY(0) scale(0.96);
  filter: brightness(0.95);
}

/* --- Card 3D Float Effect --- */
.card-3d {
  transition: transform 0.35s cubic-bezier(0.34, 1.2, 0.64, 1),
    box-shadow 0.35s ease,
    border-color 0.35s ease;
  will-change: transform;
}

.card-3d:hover {
  transform: translateY(-4px) perspective(600px) rotateX(1deg);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.5),
    0 0 30px rgba(255, 215, 0, 0.12),
    inset 0 1px 0 rgba(255, 215, 0, 0.2);
}

/* --- Deep Glassmorphism --- */
.glass-deep {
  background: linear-gradient(135deg,
      rgba(255, 215, 0, 0.03) 0%,
      rgba(0, 0, 0, 0.7) 50%,
      rgba(255, 165, 0, 0.02) 100%);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border: 1px solid rgba(255, 215, 0, 0.12);
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.4),
    inset 0 0 0 1px rgba(255, 255, 255, 0.03),
    inset 0 1px 0 rgba(255, 215, 0, 0.08);
}

.glass-deep:hover {
  background: linear-gradient(135deg,
      rgba(255, 215, 0, 0.05) 0%,
      rgba(0, 0, 0, 0.75) 50%,
      rgba(255, 165, 0, 0.04) 100%);
  border-color: rgba(255, 215, 0, 0.2);
  box-shadow:
    0 12px 48px rgba(0, 0, 0, 0.5),
    inset 0 0 0 1px rgba(255, 255, 255, 0.05),
    inset 0 1px 0 rgba(255, 215, 0, 0.15),
    0 0 20px rgba(255, 215, 0, 0.06);
}

/* --- Shine / Shimmer Sweep --- */
.shine-on-hover {
  position: relative;
  overflow: hidden;
}

.shine-on-hover::before {
  content: "";
  position: absolute;
  top: 0;
  left: -75%;
  width: 50%;
  height: 100%;
  background: linear-gradient(to right,
      transparent 0%,
      rgba(255, 255, 255, 0.06) 50%,
      transparent 100%);
  transform: skewX(-20deg);
  transition: left 0.6s ease;
  pointer-events: none;
  z-index: 1;
}

.shine-on-hover:hover::before {
  left: 125%;
}

/* --- Neon Border Pulse Animation --- */
@keyframes neon-border-rotate {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

.neon-border-anim {
  position: relative;
}

.neon-border-anim::before {
  content: "";
  position: absolute;
  inset: -1.5px;
  border-radius: inherit;
  background: linear-gradient(90deg,
      transparent 20%,
      rgba(255, 215, 0, 0.6) 50%,
      transparent 80%);
  background-size: 200% 200%;
  animation: neon-border-rotate 3s linear infinite;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.neon-border-anim:hover::before {
  opacity: 1;
}

/* --- Tab Slide Transition --- */
.tab-slide-enter {
  animation: tabSlideIn 0.2s cubic-bezier(0.34, 1.2, 0.64, 1) both;
}

@keyframes tabSlideIn {
  from {
    opacity: 0;
    transform: translateY(6px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* --- Photon Particle (AI Active) --- */
@keyframes photon-rise {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 0;
  }

  15% {
    opacity: 1;
  }

  85% {
    opacity: 0.6;
  }

  100% {
    transform: translate(var(--vx, 20px), var(--vy, -120px)) scale(0.3);
    opacity: 0;
  }
}

.photon {
  position: absolute;
  width: 3px;
  height: 3px;
  border-radius: 50%;
  background: radial-gradient(circle, #FFD700 0%, rgba(255, 165, 0, 0.3) 70%, transparent 100%);
  pointer-events: none;
  animation: photon-rise var(--dur, 1.8s) ease-out forwards;
  filter: blur(0.5px);
}

/* --- Depth Glow Ring (cards with glow on hover) --- */
.ring-glow {
  transition: box-shadow 0.4s ease;
}

.ring-glow:hover {
  box-shadow:
    0 0 0 1px rgba(255, 215, 0, 0.15),
    0 0 20px rgba(255, 215, 0, 0.1),
    0 0 60px rgba(255, 215, 0, 0.05);
}

/* --- Stagger Fade-In for lists --- */
@keyframes stagger-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stagger-item {
  animation: stagger-in 0.4s ease both;
}

.stagger-item:nth-child(1) {
  animation-delay: 0.05s;
}

.stagger-item:nth-child(2) {
  animation-delay: 0.10s;
}

.stagger-item:nth-child(3) {
  animation-delay: 0.15s;
}

.stagger-item:nth-child(4) {
  animation-delay: 0.20s;
}

.stagger-item:nth-child(5) {
  animation-delay: 0.25s;
}

.stagger-item:nth-child(6) {
  animation-delay: 0.30s;
}

.stagger-item:nth-child(7) {
  animation-delay: 0.35s;
}

.stagger-item:nth-child(8) {
  animation-delay: 0.40s;
}

.stagger-item:nth-child(9) {
  animation-delay: 0.45s;
}

.stagger-item:nth-child(10) {
  animation-delay: 0.50s;
}

/* --- Number Count-Up Flash --- */
@keyframes value-flash {
  0% {
    color: #FFD700;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
  }

  100% {
    color: inherit;
    text-shadow: none;
  }
}

.value-update {
  animation: value-flash 0.6s ease-out;
}

/* --- Ripple on click --- */
@keyframes ripple-out {
  from {
    transform: scale(0);
    opacity: 0.4;
  }

  to {
    transform: scale(4);
    opacity: 0;
  }
}

.ripple-container {
  position: relative;
  overflow: hidden;
}

.ripple-effect {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 215, 0, 0.25);
  width: 40px;
  height: 40px;
  margin-top: -20px;
  margin-left: -20px;
  animation: ripple-out 0.6s ease-out forwards;
  pointer-events: none;
}

/* --- Skeleton Loader --- */
@keyframes skeleton-shimmer {
  0% {
    background-position: -200% 0;
  }

  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  background: linear-gradient(90deg,
      rgba(255, 215, 0, 0.03) 25%,
      rgba(255, 215, 0, 0.08) 50%,
      rgba(255, 215, 0, 0.03) 75%);
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.5s infinite;
  border-radius: 4px;
}