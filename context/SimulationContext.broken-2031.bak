        // [LOCK GUARD] Prevent concurrent trades
        if (tradeInProgress) {
            console.warn("[TRADE_BLOCKED] Trade already in progress.");
            return false;
        }

        // Set lock early
        setTradeInProgress(true);
        lastTradeRef.current = Date.now();

        if (IS_PROD && reason?.startsWith("IMMEDIATE_TEST_TRIGGER")) {
